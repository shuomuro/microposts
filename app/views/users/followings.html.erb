<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <ul>
      <li>Profile：<%= @user.profile %></li>
      <li>Location：<%= @user.location %></li>
      <li><%= link_to "フォロー：#{@user.following_users.count}", following_user_path(@user) %></li>
      <li><%= link_to "フォロワー：#{@user.follower_users.count}", follower_user_path(@user) %></li>
    </ul>
    <% if logged_in? && @user == current_user %>
      <p><%= link_to "登録情報を変更する", edit_user_path(@user) %></p>
    <% end %>
  </aside>

  <div class="col-md-8">
    <% if @user.following_users.any? %>
      <h3>フォロー (<%= @user.following_users.count %>)</h3>
        <%= render 'users/followings' %>
    <% else %><h3>フォロー (<%= @user.following_users.count %>)</h3>
    <% end %>

  </div>
</div>